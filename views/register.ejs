<%- include('partials/layout-head') -%> 
<%- include('partials/navbar') -%>		

		<div id="registerwrap">
			<div class="container">
				<div class="row centered">
					<div class="col-xs-6 col-md-4 col-md-offset-4">
						<div class="message">
							<% if (message.length > 0) { %>
								<div class="alert alert-danger" role="alert">
			 						<span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
			  						<span class="sr-only">Error:</span>
			 						<%= message %>
								</div>
							<% } %>
						</div>
						<form class="form-register centered" role="form" action="/auth/register" method="POST">
						   <input type="email" class="form-control" name="email" placeholder="Email" required="true">
						   <input type="password" class="form-control" name="password" placeholder="Password" required="true">
						   <input type="text" class="form-control" name="username" placeholder="Username" required="true">
						  <button type="submit" class="btn btn-warning btn-lg">Sign Up</button>
						</form>					
					</div>
				</div>
			</div>
		</div>

<%- include('partials/layout-foot') -%> 